{% extends 'EvispaProductApiBundle::layout.html.twig' %}

{% block contents %}

{% for product in resources %}
    <div>
        <div>
            <h2>{{ product.slug }}</h2>
            {% for key, item in product.text.items %}
                <div>{{ key }}: {{ item.name }}</div>
            {% endfor %}
        </div>
    </div>
{% else %}
    <div>No Products to display.</div>
{% endfor %}

{{ (parameters.offset + 1) }} - {{ (parameters.offset + resources|length) }} of {{ total }}

{% endblock %}